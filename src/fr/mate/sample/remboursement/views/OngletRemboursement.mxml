<?xml version="1.0"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="100%">

	<mx:Script>
		<![CDATA[
			import mx.collections.*;
			import fr.mate.core.*;
			import fr.mate.sample.remboursement.model.*;
			
			[Bindable]
			public var viewModel:SyntheseVM;
		]]>
	</mx:Script>
	
	<mx:AdvancedDataGrid dataProvider="{viewModel.remboursements}"
						 width="100%"
						 height="100%"
						 id="grilleRemboursements">
		<mx:columns>
			<mx:AdvancedDataGridColumn headerText="Motif"
									   dataField="motif" />
			<mx:AdvancedDataGridColumn headerText="Montant"
									   dataField="nomComplet" />
			<mx:AdvancedDataGridColumn headerText="Date de reception"
									   dataField="dateReceptionDemande"
									   labelFunction="{FormatterUtils.formatDate}" />
			<mx:AdvancedDataGridColumn headerText="Date de remboursement"
									   dataField="dateRemboursement"
									   labelFunction="{FormatterUtils.formatDate}" />
			<mx:AdvancedDataGridColumn headerText="Etat"
									   dataField="etatRemboursement" />
		</mx:columns>
	</mx:AdvancedDataGrid>

</mx:HBox>
